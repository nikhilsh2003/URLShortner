<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body style="background-color: #12031c; color: white">
    <div class="container">
      <div class="card" style="background-color: #12031c; color: white">
        <div class="card-body">
          <h1 class="card-title display-1">URL Shortner</h1>
        </div>
      </div>
      <div class="mt-3">
        <form action="/shortURLs" method="POST">
          <div class="mb-3">
            <label for="fullURL" class="mb-3 ml-3 sr-only">URL</label>
            <input
              required
              class="form-control"
              type="url"
              name="fullURL"
              id="fullURL"
              placeholder="Enter URL"
            />
          </div>
          <button type="submit" class="btn btn-success">Shrink URL</button>
        </form>
      </div>
      <table class="table my-4 table-responsive" style="color: white">
        <thead>
          <tr>
            <th scope="col">Full URL</th>
            <th scope="col">Short URL</th>
            <th scope="col">Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortURLs.forEach((shortURL) => { %>
          <tr>
            <td>
              <a href="<%=shortURL.full%>"><%=shortURL.full%></a>
            </td>
            <td><a href="<%=shortURL.short%>"><%=shortURL.short%></a></td>
            <td><%=shortURL.clicks%></td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </body>
</html>
